<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250px"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:background="@drawable/button_shap_xiuxiu"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_marginTop="2px"
        android:layout_width="match_parent"
        android:layout_height="160px"
         android:gravity="center"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rl_weFriend">

                <ImageView
                    android:id="@+id/img_wefriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shop_icon_friend"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textSize="16px"
                    android:layout_marginTop="8px"
                    android:layout_below="@id/img_wefriend"
                    android:textColor="#999999"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rl_weChat"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/img_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shop_icon_wechat"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/managerMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"
                    android:textSize="16px"
                    android:layout_marginTop="8px"
                    android:layout_below="@id/img_wechat"
                    android:textColor="#999999"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>



        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F6F6F6"
        />

    <Button
        android:layout_marginTop="20px"
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="57px"
        android:text="取消"
        android:background="#FFFFFF"
        android:textSize="18px"
        android:textColor="#666666"
        />

</LinearLayout>