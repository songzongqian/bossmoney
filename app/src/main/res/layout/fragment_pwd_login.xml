<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout

        android:id="@+id/ll_name_psw"
        android:layout_width="match_parent"
        android:layout_height="117px"
        android:layout_marginTop="33px"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">



            <com.byx.xiuboss.xiuboss.Mvp.view.ClearWriteEditText
                android:id="@+id/login_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="21px"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入用户名"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#2C2C2C"
                android:textColorHint="#C8C8C8"
                android:textSize="16px" />

            <View
                android:id="@+id/user_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/login_userName"
                android:layout_marginTop="17px"
                android:background="#F6F6F6" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:orientation="horizontal">


            <com.byx.xiuboss.xiuboss.Mvp.view.ClearWriteEditText
                android:id="@+id/login_passWord"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="18px"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入密码"
                android:maxLines="1"
                android:textColor="#2C2C2C"
                android:textColorHint="#C8C8C8"
                android:textSize="16px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/ll_name_psw"
            android:layout_marginLeft="30px"
            android:layout_marginTop="15px"
            android:layout_marginRight="15px"
            android:background="#F6F6F6" />

    </LinearLayout>

    <Button

        android:id="@+id/btn_login_gray"
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="20px"
        android:layout_marginRight="30dip"
        android:background="@drawable/button_shape"
        android:text="登录"
        android:textColor="#999999"
        android:textSize="18px"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_login_light"
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="20px"
        android:layout_marginRight="30dip"
        android:background="@drawable/button_tz"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="18px"
         />

</LinearLayout>
