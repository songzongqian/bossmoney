<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FDF8F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_item" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163px"
            android:orientation="vertical"
            android:background="#D45047">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额（元）"
                android:textSize="12px"
                android:textColor="#FFFFFF"
                android:layout_marginTop="15px"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9000.00"
                android:textSize="36px"
                android:textColor="#FFFFFF"
                android:layout_marginTop="7px"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/button_balance"
                android:layout_width="wrap_content"
                android:layout_marginTop="15px"
                android:layout_height="31px"
                android:background="@drawable/button_putforward"
                android:text="提现"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:textSize="14px" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_tiXian"
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:layout_marginTop="12px"
            android:background="@drawable/button">


            <ImageView
                android:layout_width="21px"
                android:layout_height="21px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22px"
                app:srcCompat="@mipmap/index_icon_code" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65px"
                android:text="提现记录"
                android:textColor="#333333"
                android:textSize="14px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@mipmap/common" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
