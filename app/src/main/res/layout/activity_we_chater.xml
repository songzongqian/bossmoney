<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D45047"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/title_item"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="446px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="20px"
            android:background="@drawable/button_shap_xiuxiu"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_weChat"
                android:layout_width="230px"
                android:layout_height="230px"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="176px"
                android:layout_height="30dp"
                android:layout_marginBottom="25px"
                android:text="保存到相册"
                android:background="@drawable/button_edge"
                android:textSize="16px"
                android:textColor="#D45047"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>



    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_bind"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:text="绑定空白收款码"
           android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="16px" />


    </RelativeLayout>





</RelativeLayout>



