<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF8F3">


    <LinearLayout
        android:id="@+id/ll_myUI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/new_title_item" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="25px"
            android:layout_marginRight="15px"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px">

                <TextView
                    android:id="@+id/tv_shopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="15px"
                    android:text="雅思超市"
                    android:textColor="#333333"
                    android:textSize="18px" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="53px"
                    android:text="刘宁"
                    android:textSize="12px" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="45px"
                    android:layout_marginTop="56px"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/identity"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="53px"
                    android:text="管理员"
                    android:textSize="12px" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15px"
                    android:layout_marginRight="15px"
                    android:src="@mipmap/ic_launcher" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/mytext_shap"
                android:layerType="software" />

            <RelativeLayout
                android:id="@+id/relativeLayout_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button">

                <TextView
                    android:id="@+id/tv_fanXian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:text="返现比例"
                    android:textColor="#333333"
                    android:textSize="14px" />

                <TextView
                    android:id="@+id/tv_biLi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:text="18%"
                    android:textColor="#999999"
                    android:textSize="14px" />

                <ImageView
                    android:id="@+id/button_image_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="18dp"
                    app:srcCompat="@mipmap/common" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_wallet"
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:layout_marginTop="20px"
            android:background="@drawable/button">


            <ImageView
                android:layout_width="21px"
                android:layout_height="21px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22px"
                app:srcCompat="@mipmap/my_icon_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65px"
                android:text="钱包"
                android:textColor="#333333"
                android:textSize="14px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@mipmap/common" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="22px"
            android:layout_marginRight="15dp"
            android:background="#D6D6D6" />

        <RelativeLayout
            android:id="@+id/rl_voice"
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:background="@drawable/button">


            <ImageView
                android:layout_width="21px"
                android:layout_height="21px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22px"
                app:srcCompat="@mipmap/my_icon_voice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65px"
                android:text="语音播报"
                android:textColor="#333333"
                android:textSize="14px" />

            <Switch
                android:id="@+id/isOpen"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:checked="true" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_serviceCenter"
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:layout_marginTop="20px"
            android:background="@drawable/button">


            <ImageView
                android:layout_width="21px"
                android:layout_height="21px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22px"
                app:srcCompat="@mipmap/my_icon_service" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65px"
                android:text="客服中心"
                android:textColor="#333333"
                android:textSize="14px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@mipmap/common" />
        </RelativeLayout>

        <View
            android:id="@+id/line_two"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="22px"
            android:layout_marginRight="15dp"
            android:background="#D6D6D6" />

        <RelativeLayout
            android:id="@+id/rl_question"
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:background="@drawable/button">
            <ImageView
                android:layout_width="21px"
                android:layout_height="21px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22px"
                app:srcCompat="@mipmap/my_icon_problem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65px"
                android:text="常见问题"
                android:textColor="#333333"
                android:textSize="14px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@mipmap/common" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:layout_marginTop="8px"
            android:background="@drawable/button">
            <ImageView
                android:layout_width="21px"
                android:layout_height="21px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22px"
                app:srcCompat="@mipmap/my_icon_set" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65px"
                android:text="设置"
                android:textColor="#333333"
                android:textSize="14px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@mipmap/common" />
        </RelativeLayout>



    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rl_empty_internet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/internet"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_empty"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_internet"
            android:layout_centerHorizontal="true"
            android:text="咦？怎么木有网了呢~"
            android:textColor="#333333" />

    </RelativeLayout>


</RelativeLayout>
