<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:orientation="horizontal"
        android:background="#FFFFFF">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_head_item_one"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="12px"
            app:civ_border_color="#26A69A" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="11px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_marginTop="11px"
                android:text="Yx"
                android:textColor="#111111"
                android:textSize="14px" />

            <TextView
                android:id="@+id/payTime"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginTop="4px"
                android:text="15:07"
                android:textColor="#999999"
                android:textSize="12px" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="120px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/payMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="22px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="11px"
                    android:layout_marginRight="42px"
                    android:text="+10.00"
                    android:textColor="#666666"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/moneySource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4px"
                    android:layout_marginRight="42px"
                    android:text="返现12元"
                    android:textColor="#999999"
                    android:textSize="12px"

                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#F8F8F8"/>
</LinearLayout>