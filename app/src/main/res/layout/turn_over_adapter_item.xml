<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="#F8F8F8"
    android:longClickable="true">
    <RelativeLayout
        android:id="@+id/relativi_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="10px"
        android:background="@drawable/button_shap_xiuxiu"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_head_item_one"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="12px"
            app:civ_border_color="#26A69A" />

        <TextView
            android:id="@+id/text_name_item_one"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_marginTop="11px"
            android:layout_marginLeft="66px"
            android:text="Yx"
            android:textColor="#111111"
            android:textSize="14px" />

        <TextView
            android:id="@+id/text_time_item_one"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="66px"
            android:layout_marginTop="35px"
            android:text="15:07"
            android:textColor="#999999"
            android:textSize="12px" />

        <TextView
            android:id="@+id/text_money_item_one"
            android:layout_width="wrap_content"
            android:layout_height="22px"
            android:layout_marginTop="12px"
            android:layout_marginRight="42px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+10.00"
            android:textColor="#666666"
            android:textSize="16px" />

        <TextView
            android:id="@+id/text_money_item_wwj"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42px"
            android:layout_marginTop="34px"
            android:text="返现12元"
            android:textColor="#999999"
            android:textSize="12px"
            android:visibility="gone"/>
    </RelativeLayout>
    <Button
        android:visibility="gone"
        android:layout_marginTop="5px"
        android:id="@+id/text_jia_item_one"
        android:layout_centerHorizontal="true"
        android:layout_width="110px"
        android:layout_height="36px"
        android:layout_below="@id/relativi_one"
        android:text="查看全部"
        android:textSize="16px"
        android:gravity="center"
        android:background="@drawable/button_shap_xiuxiu"
        android:textColor="#666666"
        />
    <RelativeLayout
        android:longClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativi_two"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56px"
            android:text="暂无营业额"
            android:gravity="center"
            android:textSize="60px" />
    </RelativeLayout>
</RelativeLayout>