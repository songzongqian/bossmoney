<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/title_item" />


    <TextView
        android:id="@+id/login_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="输入验证码"
        android:textColor="#333333"
        android:textSize="26px" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们已向"
            android:textSize="16px"
            android:layout_gravity="center_vertical"
            android:textColor="#666666"
            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18936099098"
            android:textSize="16px"
            android:layout_gravity="center_vertical"
            android:textColor="#666666"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送短信验证码"
            android:textSize="16px"
            android:layout_gravity="center_vertical"
            android:textColor="#666666"/>
    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="请查看短信并输入验证码"
        android:textColor="#666666"
        android:textSize="16px" />

    <cloudist.cc.library.view.PasswordInputView
        android:id="@+id/password_inputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="25px"
        app:borderWidth="0.5dp"
        app:itemHeight="36dp"
        app:itemPadding="8dp"
        app:passwordLength="6"
        android:inputType="number"
        app:passwordWidth="6dp"
        app:borderRadius="1dp"
       android:layout_marginLeft="40px"/>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收短信大概还需要"
            android:textSize="16px"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tvSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59"
            android:textSize="16px"
            android:layout_gravity="center_vertical"
            android:textColor="#D45047"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒"
            android:textSize="16px"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>






</LinearLayout>
