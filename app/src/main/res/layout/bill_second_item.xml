<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10px"
    android:orientation="vertical"
    android:background="#F8F8F8">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40px"
    android:background="#FDF8F3">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:textSize="12px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"/>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/recycler_wwj"
        android:layout_width="match_parent"
        android:layout_height="99px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:background="#FFFFFF">


        <TextView
            android:id="@+id/text_describe"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="22px"
            android:text="10月01日收款38笔，退款0笔，合计"
            android:textColor="#9B9B9B"
            android:textSize="12px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moneyCount"
            android:layout_width="wrap_content"
            android:layout_height="37px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="46px"
            android:text="收款28笔,返现2笔"
            android:textColor="#C6A04D"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="7px"
            android:layout_height="12px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:src="@mipmap/common"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:layout_alignBaseline="@+id/moneyCount"
            android:layout_alignBottom="@+id/moneyCount"
            android:layout_toEndOf="@+id/moneyCount"
            android:layout_toRightOf="@+id/moneyCount"
            android:text="元"
            android:textColor="#C6A04D"
            android:textSize="14px"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>