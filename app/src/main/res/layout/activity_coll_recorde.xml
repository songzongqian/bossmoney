<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D45047"
    tools:context="com.byx.xiuboss.xiuboss.Mvp.activity.CollRecordeActivity">

    <include layout="@layout/title_item" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/mIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="26dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/mName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textColor="#9B9B9B"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9B9B9B"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                android:text="累计消费"/>

            <TextView
                android:id="@+id/mSpeedMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:text=""/>
            <TextView
                android:id="@+id/mBackMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D45047"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:text=""/>

        </com.zhy.autolayout.AutoLinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:paddingBottom="15dp"
        android:background="#FDF8F3"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/mEmptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="网络连接异常，请稍后重试" />
    </LinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
