<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/ll_name_psw"
        android:layout_width="match_parent"
        android:layout_height="117px"
        android:layout_marginTop="33px"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">



            <com.byx.xiuboss.xiuboss.Mvp.view.ClearWriteEditText
                android:id="@+id/login_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="21px"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入用户名"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#2C2C2C"
                android:textColorHint="#C8C8C8"
                android:textSize="16px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/ll_name_psw"
            android:layout_marginLeft="30px"
            android:layout_marginTop="10px"
            android:layout_marginRight="15px"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:orientation="horizontal">


            <com.byx.xiuboss.xiuboss.Mvp.view.ClearWriteEditText
                android:id="@+id/login_checkCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="18px"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#2C2C2C"
                android:textColorHint="#C8C8C8"
                android:textSize="16px" />

            <RelativeLayout
                android:id="@+id/getCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_Code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textSize="14px"
                    android:textColor="#C6A04D"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5px"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/ll_name_psw"
            android:layout_marginLeft="30px"
            android:layout_marginTop="5px"
            android:layout_marginRight="15px"
            android:background="#F6F6F6" />

    </LinearLayout>

    <Button

        android:id="@+id/btn_login_gray"
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="20px"
        android:layout_marginRight="30dip"
        android:background="@drawable/button_shape"
        android:text="登录"
        android:textColor="#999999"
        android:textSize="18px"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_login_light"
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="20px"
        android:layout_marginRight="30dip"
        android:background="@drawable/button_tz"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="18px"
        android:visibility="visible" />

</LinearLayout>
